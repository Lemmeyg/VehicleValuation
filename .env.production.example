# ==================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==================================
# Use these settings for the production deployment (main branch)
# CRITICAL: All development flags must be FALSE in production
# ==================================

# ==================================
# NODE ENVIRONMENT
# ==================================
NODE_ENV=production

# ==================================
# PRODUCTION SAFETY FLAGS
# ==================================
# MUST be false in production - validated by lib/env.ts
DISABLE_RATE_LIMIT=false
DISABLE_PAYMENT_CHECK=false

# ==================================
# SUPABASE CONFIGURATION
# ==================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# ==================================
# LEMON SQUEEZY (Payment Processor)
# ==================================
# Get these from: https://app.lemonsqueezy.com/settings/api
# IMPORTANT: Use LIVE mode keys for production
LEMONSQUEEZY_API_KEY=your-live-api-key
LEMONSQUEEZY_STORE_ID=your-store-id
LEMONSQUEEZY_WEBHOOK_SECRET=your-production-webhook-secret
NEXT_PUBLIC_LEMONSQUEEZY_BASIC_VARIANT_ID=your-basic-variant-id
NEXT_PUBLIC_LEMONSQUEEZY_PREMIUM_VARIANT_ID=your-premium-variant-id

# ==================================
# VEHICLE DATA API PROVIDERS
# ==================================
# VinAudit API: VIN Decoding
VINAUDIT_API_KEY=your-production-vinaudit-key

# Auto.dev API: Accident History
AUTODEV_API_KEY=your-production-autodev-key

# MarketCheck API: Price Predictions ($0.09/call)
MARKETCHECK_API_KEY=your-production-marketcheck-key

# ==================================
# APPLICATION CONFIGURATION
# ==================================
# Your production domain
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ==================================
# ANALYTICS & MONITORING
# ==================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Monitoring (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://your-key@o-account.ingest.us.sentry.io/project-id
